<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/header.ejs') %>
   
<body>
    <%- include('./partials/nav.ejs') %>

   


    <main>
        <h2 class="section-title">TO Do List</h2>

        
        <% if (prods.length > 0) { %>
            <div class="grid">
                <% for (let product of prods) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= product.title %></h1>
                        </header>
                       
                        <div class="card__content">
                            <h3 class="product__price"><%= product.date.toString().split('G')[0] %></h3>                           
                        </div>
                        <div class="btn__item">
                        <a href="/admin/edit-product/<%= product._id %>?edit=true" class="edit-btn danger">Edit</a>
                    <form action="/admin/delete-item" method="POST" class="btn__item">
                        <input type="hidden" value="<%= product._id %>" name="productId">
                        <button class="btn danger" type="submit">Delete</button>
                    </form>
                </div>
               
                    </article>

                    
                <% } %>
            </div>
        <% } else { %>
            <h1>No Pending Tasks!</h1>
        <% } %>
    </main>
    
    <%- include('./partials/footer.ejs') %>
    <link rel="stylesheet" href="/css/shop.css">
</body>
</html>




